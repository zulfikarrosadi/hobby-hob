// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  UserProfile UserProfile[]

  @@map("users")
}

model UserProfile {
  id       Int     @id @default(autoincrement())
  username String  @unique
  fullName String?
  bio      String? @db.Text
  sosmed   Json?   @db.Json
  userId   Int     @unique

  UserHobby UserHobby[]
  UserId    User        @relation(references: [id], fields: [userId])
  Post      Post[]

  @@map("user_profile")
}

model Hobby {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String? @db.VarChar(500)
  image       String

  UserHobby UserHobby[]
  Post      Post[]

  @@map("hobbies")
}

model UserHobby {
  userId  Int
  hobbyId Int

  user  UserProfile @relation(fields: [userId], references: [id])
  hobby Hobby       @relation(fields: [hobbyId], references: [id])

  @@id([userId, hobbyId])
  @@map("user_hobbies")
}

model Post {
  id      Int         @id @default(autoincrement()) @map("id")
  content String      @map("content") @db.Text
  userId  Int         @map("user_id")
  hobbyId Int         @map("hobby_id")
  User    UserProfile @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: Cascade)
  Hobby   Hobby       @relation(fields: [hobbyId], references: [id], onDelete: NoAction, onUpdate: Cascade)

  @@map("posts")
}
